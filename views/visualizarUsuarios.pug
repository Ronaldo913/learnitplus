doctype html
html(lang='pt-br')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Postagens
    link(rel='stylesheet', href='/stylesheets/visualizarUsuarios.css')
  body
    #fade.hide
    #modal.hide
      .modal-header
        h2(style='color: black;') Atualizar Usuário
        button#close-modal(style='color: black; background-color: transparent') X
      .modal-body
        div
        p=msg
        form#form(action='/users/update' method='POST')
          input(type="hidden" id="target" name="target" value="")
          input.inputs(name="password" type='text' value='' placeholder='Insira a nova senha')
          input#inputB(type='submit' value='atualizar')
    #container
      header.menu
        nav.content
          ul.list
            li.link
              a(href='/') Home
            li.link
              a(href='/opcoes') Funções
            li.link
              a(href='/visualizar') Outra coisa
            li.link
              a(href='/json') JSON
      
      main
        each user in users
          div
            p=user.email
            p=user.password
            p=user.id
            button.open-modal(id=user.url) Atualizar usuário
            a(href=user.url+'/delete')
              button deletar
    script(src='/javascripts/script2.js')