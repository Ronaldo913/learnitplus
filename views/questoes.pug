doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width')
    title Questoes
    link(rel='stylesheet', href='/stylesheets/styleC.css')
  body
    #fade.hide
    #modal.hide
      .modal-header
        h2(style='color: black;') Cadastrar Card Questões
        button#close-modal(style='color: black; background-color: transparent') X
      .modal-body
        div
        p=msg
        form#form(action='/questions/create/' method='POST')
          input.inputs(name="title" type='text' value='' placeholder='Insira o título da questão')
          input.inputs(name="a" type='text' value='' placeholder='Insira o texto da letra A')
          input.inputs(name="b" type='text' value='' placeholder='Insira o texto da letra B')
          input.inputs(name="c" type='text' value='' placeholder='Insira o texto da letra C')
          input.inputs(name="d" type='text' value='' placeholder='Insira o texto da letra D')
          input.inputs(name="color" type='text' value='' placeholder='Insira o código da cor (Ex: 0xFF(CÓDIGOCOR)')
          input.inputs(name="answer" type='text' value='' placeholder='Insira o texto da resposta da questão')
          input#inputB(type='submit' value='cadastrar')
    #container
      header.menu
        nav.content
          ul.list
            li.link
              a(href='/') Home
            li.link
              a(href='/opcoes') Funções
            li.link
              a(href='/visualizar') Outra coisa
            li.link
              a(href='/json') JSON
    h1#h1 Seja Bem-Vindo a tela de Cadastro dos cards de questões!!!
    img(src="https://i.pinimg.com/originals/29/f5/69/29f5699389ac551dfd0705261485e616.gif" width=300)

    #buttons
      button#open-modal(style='color: white;') Cadastrar Questões
      a(href='/visualizarQuestoes')
        button#open-modal(style='color: white;') Visualizar Questões

    script(src='/javascripts/script.js')